/* miniprogram/pages/ordertest/ordertest.wxss */
.swaper{
  position: relative;
  padding: 80rpx 10rpx 150rpx;
}
.h-t{
  text-align: center;
  background: red;
  color:#fff;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
.list-item{
  position: relative;
}
.delet{
  position: absolute;
  z-index: 9;
  top:0;
  right: 0;
  height: 160rpx;
  line-height: 160rpx;
  background: red;
  color:#fff;
  border-radius: 0;
  
}
.list{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom:1rpx solid #f2f2f2;
}
.inNum{
  display: inline-block;
}
.order{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  border-top:1px solid #f2f2f2;
  background: #fff;
  z-index: 999;
}
.msg{
  width: 50%;  
  box-sizing: border-box;
  padding-left:20rpx;
}
.msg span{
  color:red;
  margin-left: 5rpx;
  font-size: 50rpx;
}
.order button{
  width: 50%;
  margin: 0;
  background: red;
  color:#fff;
  border-radius: 0;
}